{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "files": {
    "includes": [
      "src",
      "!src/generated",
      "!src/generated/**",
      "!node_modules",
      "!dist",
      "!build",
      "!coverage",
      "!public",
      "!assets"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "linter": { "enabled": true },
  "formatter": { "enabled": true }
}
