generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

model Feed {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  sourceUrl String   @unique
  items     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("feeds")
}



