model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  passwordHash String
  name         String? // optional
  role         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("users")
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique // 32B base64url (43–44 symbols without '=')
  userId    String   @unique @db.ObjectId
  createdAt DateTime @default(now())
  expiresAt DateTime

  @@map("sessions")
}
